<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>(Admin) Manage products</title>
    <%- include('link') %>
</head>
<body>
    <div class="separate">

    </div>
    <%- include('nav-for-pages') %>
    <div class="container-fluid">
        <div class="container py-3">
            <table class="table table-hover table-striped">
                <thead>
                    <tr class="text-center">
                        <th>Name</th>
                        <th>Shop</th>
                        <th>Action</th>
                    </tr>
                </thead>
                <tbody>
                    <% for(let d of data) { %>
                        <tr class="p-2 text-center">
                            <td>
                                <div>
                                    <a href="/view-product/<%= d._id %>"><%= d.product_name %></a>
                                </div>
                            </td>
                            <td>
                                <div>
                                    <a href="/admin-shop-information?s=<%= d.shop_id %>" class="text-break"><%= d.shop_id %></a>
                                </div>
                            </td>
                            <td class="text-center">
                                <a id="delete" href="/delete-product/<%= d._id %>">
                                    <img src="/bootstrap-icons/trash.svg">
                                </a>
                            </td>
                        </tr>
                    <% } %>
                </tbody>
            </table>
        </div>
    </div>
</body>
</html>